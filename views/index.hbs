<div class="root" id="root">

<h1 class="title">{{title}}</h1>
<p>The classic CBB brain teaser</p>

<div id="users" class="users">
  <h3>USERS ONLINE: \{{ userCount }}</h3>
  <div class="users_grid">
    <div v-for="user in usersOnline" class="users_id">
      \{{ user }}
    </div>
  </div>
</div>

<button v-if='findGameBtnStateInitial' type="button" id="#findGameBtn"
  class="siimple-btn siimple-btn--green findGameBtn"
  v-on:click="findGameHandler">
  FIND GAME
</button>
<button v-else type="button" id="#findGameBtn"
  class="siimple-btn siimple-btn--red findGameBtn"
  v-on:click="cancelFindGame">
  WAITING FOR PARTNER
</button>

{{> instructions}}

</div>
